@model IEnumerable<test_SFF.MovieWithRating>

@{
    ViewData["Title"] = "Home Page";
    var images = ViewData["availableImages"] as List<string>;
    int i = -1;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Below is a list of all movies available in the SFF library.</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Cover Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhysicalCopy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageScore)
            </th>
            <th>
                Show Reviews
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        i++;
        <tr>
            <td>
                <img src="~/images/@(images[i]).png" class="img" alt="My image" height="200"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhysicalCopy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageScore)
            </td>
            <td>
                <a asp-action="Review" asp-route-id="@item.Id">Reviews</a>
            </td>
        </tr>
}
    </tbody>
</table>